<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>
  <br>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description, cols: 40, rows: 15 %>
  </div>

  <div>
    <%= form.label :newsletter_id, style: "display: block" %>
    <%= form.select :newsletter_id, @newsletters.map { |n| [n.name, n.id] }, { :include_blank => '-- Select One --' }, :required => true %>
  <div>
    <br>
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
